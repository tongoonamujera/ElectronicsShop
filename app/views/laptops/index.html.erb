<div class="row my-3">
  <% @laptops.each do |laptop| %> 
  <div class="card col-3 mx-auto">
    <img src="<%= laptop.image %>">
    <div class="card-body">
      <p class="card-text">
        <%= laptop.brandname %>
      </p>
      <p class="card-text">
        <%= laptop.description %>
      </p>
      <p class="card-text text-danger">
        <%= laptop.condition %>
      </p>
      <p class="card-text">
        <%= laptop.location.upcase %>
      </p>
    </div>
    <div class="card-footer d-flex justify-content-between">
      <div class="col-3">
        <%= link_to 'Show', laptop, class:"btn btn-outline-success btn-sm" %>
      </div>
      <div class="col-3">
        <%= link_to 'Edit', edit_laptop_path(laptop), class:"btn btn-outline-success btn-sm" %>
      </div>
      <div class="col-3">
        <%= link_to 'Destroy', laptop, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %>
      </div>
    </div>
  </div>
  <% end %>
</div>





